{% extends '::base.html.twig' %}
{% block category %}class="active"{% endblock %}
{% block body -%}
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Category</h2>
                </div>
                <div class="panel-body">
                    <table class="table table-striped">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ entity.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ entity.name }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <a href="{{ path('cms_category') }}" class="btn btn-sm btn-default pull-left">
                Back to the list
            </a>
            <span class=" pull-right">{{ form(delete_form) }}</span>
            <a href="{{ path('cms_category_edit', { 'id': entity.id }) }}" class="btn btn-sm btn-warning pull-right">
                Edit
            </a>
        </div>
    </div>
{% endblock %}
